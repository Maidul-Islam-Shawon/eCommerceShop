@{
    ViewData["Title"] = "Details";
}
<br />

<h2 class="text-info">Delete a Role</h2>

<form asp-action="Delete" method="post" enctype="application/x-www-form-urlencoded">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" name="id" value="@Model.Id" />
        <h3>Do you want to Delete this Role?</h3>
        <br />

        <div class="form-group row">
            <div class="col-2">
                <label>Role Name</label>
            </div>
            <div class="col-5">
                <input id="name" name="name" value="@Model.Name" class="form-control" readonly="readonly" />
            </div>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete"/>
            <a asp-action="Index" class="btn btn-success">Back To List</a>
        </div>
    </div>
</form>