@using eCommerceShop.Models;

@model IEnumerable<SpecialTags>

@{
    ViewData["Title"] = "Index";
}
<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Special Tag List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Tag Name</a>
    </div>
</div>

<br />

<table class="table table-striped border">
    <tr class="table-info">
        <th>
            @Html.DisplayNameFor(c => c.TagName)
        </th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TagName</td>
            <td></td>
            <td style="width:100px">
                <div class="btn-group">
                    <a asp-action="Edit" asp-controller="SpecialTags" class="btn btn-primary" asp-route-id=@item.Id><i class="far fa-edit"></i></a>
                    <a asp-action="Details" asp-controller="SpecialTags" class="btn btn-success" asp-route-id=@item.Id><i class="fas fa-list-ul"></i></a>
                    <a asp-action="Delete" asp-controller="SpecialTags" class="btn btn-danger" asp-route-id=@item.Id><i class="fas fa-trash-alt"></i></a>
                </div>
            </td>
        </tr>
    }
</table>