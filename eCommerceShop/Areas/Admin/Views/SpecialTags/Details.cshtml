@model eCommerceShop.Models.SpecialTags;

@{
    ViewData["Title"] = "Details";
}

<h2 class="text-info">Details of Tag Name</h2>

<div class="p-4 rounded border">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="TagName"></label>
        </div>
        <div class="col-5">
            <input asp-for="TagName" readonly="readonly" class="form-control" />
        </div>
        <span asp-validation-for="TagName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <a asp-action="Edit" class="btn btn-info" asp-route-id=@Model.Id>Edit</a>
        <a asp-action="Index" class="btn btn-success">Back To List</a>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}