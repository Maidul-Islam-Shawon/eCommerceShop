@model eCommerceShop.Models.ApplicationUser

@{
    ViewData["Title"] = "Details";
}
<br />

<h2 class="text-info">User Details</h2>
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id" value="@Model.Id" />

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName"></label>
            </div>
            <div class="col-5">
                <input asp-for="UserName" class="form-control" readonly="readonly" />
            </div>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FirstName"></label>
            </div>
            <div class="col-5">
                <input asp-for="FirstName" class="form-control" readonly="readonly"/>
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LastName"></label>
            </div>
            <div class="col-5">
                <input asp-for="LastName" class="form-control" readonly="readonly"/>
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Edit</a>
            <a asp-action="Index" class="btn btn-success">Back To List</a>
        </div>
    </div>



